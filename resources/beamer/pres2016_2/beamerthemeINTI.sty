\defbeamertemplate*{title page}{customized}[1][] {
  \vspace{40mm}
  \hspace{21mm}
  \begin{minipage}{71mm}
    \centering{
      \usebeamerfont{institute}\small{\insertinstitute}\par
      \bigskip
      \usebeamerfont{title}\inserttitle
    }
    \begin{flushright}
      \usebeamerfont{author}\tiny{\insertauthor}\par
      \bigskip
      \usebeamerfont{date}\insertdate\par
    \end{flushright}
  \end{minipage}
}

