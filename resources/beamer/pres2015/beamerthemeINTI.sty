}

\defbeamertemplate*{title page}{customized}[1][] {
  \vspace{40mm}
  \hspace{21mm}
  \begin{minipage}{71mm}
    \centering{
      \usebeamerfont{title}\inserttitle\par
      \usebeamerfont{subtitle}
      \insertsubtitle\par
      \bigskip
      \usebeamerfont{institute}
      \insertauthor\par
    }
    \begin{flushright}
      \usebeamerfont{date}\insertdate\par
    \end{flushright}
  \end{minipage}
}

% Cambio formato de títulos de frames
\setbeamertemplate{frametitle}{
  \vspace{15mm}
  \color{darkBlue}
  \textbf{\insertframetitle}
  \par
}

\newcommand{\firstpage}{
  {
   \usebackgroundtemplate{\includegraphics[page=1,width=\paperwidth,height=\paperheight]{background.pdf}}
   \begin{frame}
     \titlepage
   \end{frame}
  }
}

\newcommand{\lastpage}[6]{
  {
   \usebackgroundtemplate{\includegraphics[page=3,width=\paperwidth,height=\paperheight]{background.pdf}}
   \begin{frame}
     \vspace{15mm}
     \hspace{10mm}
     \color{white}
     \begin{minipage}{48mm}
       \usebeamerfont{title}#1\par
       \bigskip
       \usebeamerfont{institute}
       #2 \\
       #3 \\
       #4 \\
       #5 \\
       #6 \\
     \end{minipage}
     \par
   \end{frame}   
  }
}

